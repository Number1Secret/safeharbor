# SafeHarbor AI Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=SafeHarbor AI
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000"]

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=safeharbor
POSTGRES_PASSWORD=safeharbor
POSTGRES_DB=safeharbor

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-use-openssl-rand-hex-32
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE-ME-IN-PRODUCTION-use-fernet-generate-key
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Anthropic API (for Occupation AI)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OBBB Tax Configuration
TAX_YEAR=2025
FEDERAL_MINIMUM_WAGE=7.25
FLSA_OVERTIME_THRESHOLD=40

# Phase-out thresholds (OBBB)
PHASE_OUT_SINGLE_START=75000
PHASE_OUT_SINGLE_END=100000
PHASE_OUT_MARRIED_START=150000
PHASE_OUT_MARRIED_END=200000
PHASE_OUT_HOH_START=112500
PHASE_OUT_HOH_END=150000

# Compliance Vault
VAULT_RETENTION_YEARS=7

# Integration Rate Limits (per hour)
RATE_LIMIT_ADP=1000
RATE_LIMIT_GUSTO=6000
RATE_LIMIT_TOAST=30000
RATE_LIMIT_SQUARE=30000

# Error Monitoring (Sentry)
SENTRY_DSN=

# Feature Flags
ENABLE_PENALTY_GUARANTEE=false
ENABLE_ENTERPRISE_SSO=false
ENABLE_WRITEBACK=true

# Integration OAuth Credentials (obtain from provider developer portals)
# GUSTO_CLIENT_ID=
# GUSTO_CLIENT_SECRET=
# TOAST_CLIENT_ID=
# TOAST_CLIENT_SECRET=
# ADP_CLIENT_ID=
# ADP_CLIENT_SECRET=
# SQUARE_CLIENT_ID=
# SQUARE_CLIENT_SECRET=
